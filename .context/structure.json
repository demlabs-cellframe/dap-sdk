{
  "version": "1.0",
  "created": "2025-01-03T15:00:00Z",
  "updated": "2025-06-05T14:00:00Z",
  "description": "DAP SDK project structure with modular organization",
  "project_overview": {
    "name": "DAP SDK",
    "description": "Decentralized Application Platform Software Development Kit",
    "focus": "Quantum-resistant cryptography and blockchain infrastructure"
  },
  "module_references": {
    "crypto": "modules/crypto.json",
    "core": "modules/core.json", 
    "net": "modules/net.json",
    "other": "modules/other.json"
  },
  "context_system": {
    "description": "Context management system for task tracking",
    "global_files": {
      "index.json": "Global index with references to .local/ task data",
      "structure.json": "This file - modular project structure",
      "context.json": "General project context",
      "code_templates.json": "Code templates and patterns (auto-loaded)",
      "coding_guidelines.json": "Coding guidelines (auto-loaded)",
      "project_standards.json": "Documentation standards (auto-loaded)",
      "scripts/": "Common scripts for all tasks",
      "tests/": "Common tests and utilities",
      "modules/": "Modular project structure definitions"
    },
    "local_files": {
      ".local/index.json": "Current task summary",
      ".local/context.json": "Current task technical context",
      ".local/progress.json": "Current task progress tracking",
      ".local/scripts/": "Task-specific scripts (optional)",
      ".local/tests/": "Task-specific tests (optional)"
    }
  },
  "workflow": {
    "load_context": [
      "Load context/index.json for references",
      "Load context/context.json for project info", 
      "Load context/.local/*.json for current task",
      "Load specific modules as needed from modules/"
    ],
    "new_task": [
      "Update context/.local/index.json with task info",
      "Create context/.local/context.json for task details",
      "Create context/.local/progress.json for tracking",
      "No changes needed outside .local/ directory"
    ],
    "module_detail": [
      "Load modules/{module}.json for specific module structure",
      "Use for navigation and component understanding"
    ]
  },
  "conventions": {
    "status_values": ["planned", "active", "paused", "completed", "archived"],
    "progress_range": "0-100",
    "date_format": "ISO 8601 (YYYY-MM-DDTHH:mm:ssZ)",
    "file_encoding": "UTF-8",
    "indentation": "2 spaces"
  },
  "git_policy": {
    "tracked": [
      "context/index.json",
      "context/structure.json", 
      "context/context.json",
      "context/modules/*.json",
      "context/code_templates.json",
      "context/coding_guidelines.json",
      "context/project_standards.json",
      "context/scripts/",
      "context/tests/"
    ],
    "ignored": [
      "context/.local/*"
    ],
    "rationale": "Local task files prevent git conflicts, modules provide reusable structure info"
  },
  "usage_examples": {
    "load_full_context": "./context/scripts/load_full_context.sh",
    "query_crypto_structure": "jq . context/modules/crypto.json",
    "current_task_progress": "jq '.overall_progress.percentage' context/.local/progress.json",
    "chipmunk_files": "jq '.components.chipmunk.key_files[]' context/modules/crypto.json"
  }
} 